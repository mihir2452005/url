{
    "manifest_version": 3,
    "name": "URL Sentinel Extension",
    "version": "1.0",
    "description": "Analyze current tab URL for threats using local URL Sentinel",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Scan URL"
    }
}